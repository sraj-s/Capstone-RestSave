		jQuery(document).ready(function() {
			
			
			// AJAX Request to Delete a Post
			
			jQuery('.delete-handler').on('click', function() {
				let post_id = jQuery(this).attr('id');
				
				let confirmation = confirm("Do you want to delete this post");
				
				if(confirmation) {
					$.ajax({
						url: "/post/delete",
						method: "POST",
						data: {post_id: post_id},
						success: function(response) {
							if(!response.error) {
								window.location.href = "/post/update";
							}
							else {
								throw new Error(response.error_message);
							}
						}
					});
				}
				return;
			});
			
			
				
			jQuery('.modal-handler').on('click', function() {
				let post_id = jQuery(this).attr('id');
				
				try {
					makeAjaxCall(post_id);
				}
				catch(e) {
					console.log(e);
				}
			});
			
			function makeAjaxCall(post_id) {
			
				$.ajax({
					url: "/post/getById",
					method: "POST",
					data: {post_id: post_id},
					success: function(response) {
						if(!response.error) {
							proceedRequest(response.post);
						}
						else {
							throw new Error(response.error_message);
						}
					}
				});
			}
			
			function proceedRequest(post) {
				loadModalWithDynamicContent(post);
				showModal();
			}
			
			function showModal() {
				$('#myModal2').modal({show:true});
			}
			
			function loadModalWithDynamicContent(post) {
				$('#post_id').attr('value', post._id);
				$('#restaurant_name').attr('value', post.restaurant_name);
				$('#food_description').attr('value', post.food_description);
				$('#number_of_persons').attr('value', post.number_of_persons);
				$('#address').attr('value', post.address);
			}
			
		});
</script>


</body>
</html>
